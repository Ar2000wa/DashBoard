
@model Products
@{
    Layout="~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container" dir="rtl">
    <div class="row mt-5">
        <div class="col">
            <div class="card">
                <div class="card-header text-white"  style="background-color: rgb(204, 116, 101);">
                    <h4>تعديل منتج </h4>
                </div>

                <div class="card-body">
                 <form asp-action="UpdateProduct" asp-controller="DashBoard" method="post">
                    <input type="text" name="Id" value="@Model.Id" hidden>
                  <div class="row">
                    <div class="col">
                         <label class="form-label">اسم المنتج</label>
                         <input type="text" class="form-control" name="Name" value="@Model.Name" >
                    </div>
                    <div class="col">
                        <label class="form-label">سعر المنتج</label>
                         <input type="number" class="form-control" name="Price" value="@Model.Price" >
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label class="form-label">وصف المنتج</label>
                         <input type="text" class="form-control" name="Description" value="@Model.Description" >
                    </div>
                  </div>

                  <div class="row mt-3">
                      <div class="col text-center">
                        <button class="btn btn-danger" type="submit">حفظ البيانات</button>
                      </div>
                  </div>
                 </form>
                </div>
            </div>
        </div>
    </div>

</div>
