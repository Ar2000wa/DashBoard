@model List<ProductDetailes>
@{
    Layout="~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" dir="rtl">
    <div class="row mt-5">
        <div class="col">
            <div class="card">
                <div class="card-header text-white"  style="background-color: rgb(239, 143, 74);">
                    <h4>اضافة تفصيل منتج جديد</h4>
                </div>

                <div class="card-body">
                 <form asp-action="Add_ProductDetailes" method="post" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col">
                         <label class="form-label">اختر الفئة</label>
                         <select class="form-select" name="ProductId">
                               @if (ViewBag.products != null)
                                  {
                                     foreach (var p in ViewBag.products)
                                  {
                                      <option value="@p.Id">@p.Name</option>
                                   }
                                   }
                                      else
                                   {
                                     <option disabled>لا توجد منتجات</option>
                                    }
                           </select>
                    </div>
                     <div class="col">
                        <label class="form-label">اسم المنتج</label>
                         <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="col">
                        <label class="form-label">لون المنتج</label>
                         <input type="text" class="form-control" name="Color">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label class="form-label">كمية المنتج</label>
                         <input type="text" class="form-control" name="Qty">
                    </div>
                  </div>
                   <div class="row">
                    <div class="col">
                      <label class="form-label">ضريبة المنتج</label>
                         <input type="text" class="form-control" name="Vat">
                    </div>
                  </div>
                   <div class="row">
                    <div class="col">
                      <label class="form-label">صورة المنتج</label>
                         <input type="file" class="form-control" name="Imagefile">
                    </div>
                  </div>

                  <div class="row mt-3">
                      <div class="col text-center">
                        <button class="btn btn-danger" type="submit">حفظ البيانات</button>
                      </div>
                  </div>
                 </form>
                </div>
            </div>
        </div>
    </div>


    <hr class="text-muted"/>
     
    <div class="row mt-5">
        <div class="col ">
            <div class="card">
                <div class="card-header text-white" style="background-color: rgb(239, 143, 74);">
                    <h4>بيانات المنتجات</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                      <thead>
                          <tr class="text-center">
                            <th>رقم الفئة</th>
                            <th>رقم المنتج</th>
                            <th>اسم المنتج</th>
                            <th>لون المنتج</th>
                            <th>ضريبة المنتج</th>
                            <th>صورة المنتج</th>
                            <th colspan="2" >إجـــراء</th>




                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var item in Model){
                          <tr class="text-center">
                            
                          <td>@item.products?.Name</td>
                          <td>@item.Id</td>
                          <td>@item.Name</td>
                          <td>@item.Color</td>
                          <td>@item.Vat</td>
                          <td>@item.Image</td>
                          <td><a asp-action="DeleteProductDetailes" asp-route-id="@item.Id" onclick="return confirm('هل انت متأكد من الحذف')"><i class="bi bi-trash-fill text-danger"></i></a></td>
                          <td><a asp-action="EditProductDetailes" asp-route-id="@item.Id"><i class="bi bi-pencil-fill text-success"></i></a></td>


                          </tr>

                        


                        }
                        
                      </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
