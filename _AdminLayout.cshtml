<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductDashboard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <title>لوحة تحكم مدير النظام</title>
    <style>
      html, body {
  height: 100%;
  margin: 0;
}
    </style>
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-warning px-3 text-black">
        
         <a class="navbar-brand" href="#">لوحة التحكم </a>
         <h4>مرحبا @TempData["username"]</h4>

         <button class="navbar-toggler" type="button" data-bs-toggle="collaps"  data-bs-target="#">
            <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse justify-content-end">
             <ul class="navbar-nav">
                <li class="nav-item p-2">الرئيسية</li>
                <li class="nav-item p-2">الإعدادات</li>
                
             </ul>
              <ul class="dropdown-menu dropdown-menu-end">
                <li class="dropdown-item p">المستخدم</li>
                <li class="dropdown-item">إعدادات المستخدم</li>
              </ul>
               
             </ul>
             </ul>
         </div>

         </div>
    </header> 

   <main>
  <div class="row min-vh-100">
    <div class="col-md-10 col-sm-8">
      @RenderBody()
    </div> 
    <div class="col-md-2 col-sm-2 bg-dark text-white text-end">
      <div class="row">
        <div class="bg-secondary">
          <h4>لوحة التحكم</h4>
        </div>
        <hr class="text-muted" />
        <ul class="nav nav-pills flex-column mb-auto">
           <li class="nav-item">
                    <a asp-asp-controller="DashBoard" asp-action="" class="nav-link text-white">
                    الرئيسية <i class="bi bi-house-door"></i>  
                    </a>
                </li>
           <li class="nav-item">
                    <a href="#" class="nav-link text-white">
                   المستخدمين  <i class="bi bi-person"></i>  
                    </a>
                </li>
         
           <li class="nav-item">
                    <a asp-controller="DashBoard" asp-action="Products" class="nav-link text-white">
                   المنتجات   <i class="bi bi-diagram-2"></i>  
                    </a>
             </li>
              <li class="nav-item">
                    <a asp-controller="DashBoard" asp-action="ProductDetailes" class="nav-link text-white">
                      تفاصيل المنتجات  <i class="bi bi-diagram-3-fill"></i>  
                    </a>
                </li>
                 <li class="nav-item">
                    <a asp-controller="DashBoard" asp-action="Departments" class="nav-link text-white">
                      الاقسام <i class="bi bi-diagram-3-fill"></i>  
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="DashBoard" asp-action="Employees" class="nav-link text-white">
                      الموظفين <i class="bi bi-diagram-3-fill"></i>  
                    </a>
                </li>
                 <li class="nav-item">
                    <a asp-action="Logout" class="nav-link text-white">
                      تسجيل الخروج <i class="bi bi-box-arrow-left"></i>  
                    </a>
                </li>
              
      </div>
    </div> 
  </div>
</main>


   <footer class="text-center py-3 mt-auto">
    &copy; 2025 جميع الحقوق محفوظة
</footer>
     <script type="importmap"></script>

     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>